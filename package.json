{
  "name": "sights-and-sounds-pwa-sensor-demo",
  "author": "Glen Smith <glen@bytecode.com.au>",
  "devDependencies": {
    "bower": "1.8.2",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.0",
    "eslint-plugin-html": "^2.0.0",
    "http-server": "0.11.1",
    "polymer-cli": "1.6.0",
    "shx": "0.2.2"
  },
  "scripts": {
    "404": "shx cp build/es5-bundled/index.html build/es5-bundled/404.html",
    "bower:install": "bower install --allow-root",
    "lint": "npm run lint:javascript && polymer lint",
    "lint:javascript": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "polymer test",
    "test:integration": "polymer build # test that psk builds without error with the CLI",
    "build": "polymer build",
    "https": "http-server -p 8443 --ssl -C ssl/cert.pem -K ssl/key.pem",
    "ssl": "polymer serve -p 8443 -H 192.168.1.55 --protocol https/1.1 --cert ssl/cert.pem --key ssl/key.pem -o -b chrome",
    "ssl-local": "polymer serve -p 8443 --protocol https/1.1 --cert ssl/cert.pem --key ssl/key.pem -o -b chrome",
    "dist-gitlab": "shx cp -R build/es5-bundled public/"
  }
}
